@namespace url("http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul");


/*.autorepeatbutton-up[orient="horizontal"],*/
.scrollbutton-up[orient="horizontal"] {
  list-style-image:url("chrome://songbird/skin/base-elements/button-scroll-left.png");
}
/*.autorepeatbutton-down[orient="horizontal"],*/
.scrollbutton-down[orient="horizontal"] {
  list-style-image:url("chrome://songbird/skin/base-elements/button-scroll-right.png");
}
.scrollbutton-up {
  list-style-image:url("chrome://songbird/skin/base-elements/button-scroll-up.png");
}
.scrollbutton-down {
  list-style-image:url("chrome://songbird/skin/base-elements/button-scroll-down.png");
}


.autorepeatbutton-up {
  list-style-image: url("chrome://songbird/skin/menu/menu-spin-up.png");
}
.autorepeatbutton-down {
  list-style-image:  url("chrome://songbird/skin/menu/menu-spin-down.png");
}

.autorepeatbutton-up,
.autorepeatbutton-down {
  -moz-image-region:rect(0px 9px 9px 0px);
}

.scrollbutton-up[orient="horizontal"],
.scrollbutton-down[orient="horizontal"],
.scrollbutton-up,
.scrollbutton-down {
  -moz-image-region:rect(0px 8px 8px 0px);
}
.scrollbutton-up[orient="horizontal"][disabled="true"],
.scrollbutton-down[orient="horizontal"][disabled="true"],
.scrollbutton-up[disabled="true"],
.scrollbutton-down[disabled="true"] {
  -moz-image-region:rect(24px 8px 32px 0px);
}


.autorepeatbutton-up[orient="horizontal"][disabled="true"],
.autorepeatbutton-down[orient="horizontal"][disabled="true"],
.autorepeatbutton-up[disabled="true"],
.autorepeatbutton-down[disabled="true"] {
  opacity:0.5;
}



.autorepeatbutton-up {
  padding-bottom:2px;
}
.autorepeatbutton-down {
  padding-top:2px;
}


.scrollbutton-up > .toolbarbutton-text,
.scrollbutton-down > .toolbarbutton-text {
  display:none;
}

autorepeatbutton {
  -moz-box-align:center;
  -moz-box-pack:center;
}

