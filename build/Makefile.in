DEPTH = ..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

tasks : sbBuildIDs.h all

sbBuildIDs.h: sbBuildIDs.h.in $(SB_BUILDID_FILENAME)
	$(RM) -f $@
	$(PERL) -I$(SCRIPTS_DIR) $(SCRIPTS_DIR)/generate-build-defs.pl \
	  $@ $(srcdir)/$@.in $(SB_BUILDID_FILENAME)

$(SB_BUILDID_FILENAME):
	$(PERL) -I$(SCRIPTS_DIR) $(SCRIPTS_DIR)/generate-build-id.pl \
	  $@ $(SONGBIRD_OFFICIAL)

include $(topsrcdir)/build/rules.mk
