<!DOCTYPE overlay [
<!ENTITY % brandDTD SYSTEM "chrome://branding/locale/brand.dtd">
<!ENTITY % nightingaleDTD SYSTEM "chrome://nightingale/locale/nightingale.dtd">
<!ENTITY % charsetDTD SYSTEM "chrome://global/locale/charsetOverlay.dtd" >
<!ENTITY % browserDTD SYSTEM "chrome://browser/locale/browser.dtd" >
%brandDTD;
%nightingaleDTD;
%charsetDTD;
%browserDTD;
]>

<!-- This overlay is loaded on Linux only, via an "OS=Linux" flag in
     nightingale.manifest.  (see jar.mn.in) -->

<overlay
  id="linuxMenuOverlay"
  xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
  xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#">

  <menubar id="main-menubar">
    <menu id="edit-menu">
      <menupopup id="menu_EditPopup">
        <menuseparator/>
        <menuitem id="menu_preferences"
                  label="&menu.linux.preferences;"
                  accesskey="&menu.linux.preferences.accesskey;"
                  oncommand="openPreferences();"/>
      </menupopup>
    </menu>
    <!-- remove preferences entry in Tools menu, see SB bug #10030 -->
    <menu id="tools-menu">
      <menupopup id="menu_ToolsPopup">
        <menuseparator id="menu_PrefsSeparator" removeelement="true"/>
        <menuitem id="menu_preferences" removeelement="true"/>
      </menupopup>
    </menu>
  </menubar>

  <!-- XXXredfive this make ctrl-shift-z work but doens't block ctrl-y -->
  <keyset id="mainKeyset">
    <key id="redo-key" modifiers="accel,shift" key="&menu.edit.undo.key;" />
  </keyset>

</overlay>
