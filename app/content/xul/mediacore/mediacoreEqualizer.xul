      </vbox>
      <spacer flex="2"/>
      <vbox width="35">
        <label value="&equalizer.band9.label;" class="sb-eq-label"/>
        <hbox>
          <spacer flex="1"/>
          <xul:sb-eq-band-slider id="eq-band9" band="9" onchange="onSliderChange(9)" orient="vertical"/>
