        </hbox>
	      <label value="0" id="eq-label-band1" class="sb-eq-label"/>
      </vbox>
      <spacer flex="2"/>
      <vbox width="35">
        <label value="&equalizer.band2.label;" class="sb-eq-label"/>
        <hbox>
          <spacer flex="1"/>
          <xul:sb-eq-band-slider id="eq-band2" band="2" onchange="onSliderChange(2)" orient="vertical"/>
