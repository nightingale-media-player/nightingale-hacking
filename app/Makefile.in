DEPTH = ..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

NIGHTINGALE_XULRUNNER = $(srcdir)/updater.ini

NIGHTINGALE_DIST = $(srcdir)/blocklist.xml \
                $(srcdir)/updater.ini \
                $(NULL)

# application.ini handling
NIGHTINGALE_PP_RESOURCES = $(srcdir)/application.ini.in \
                        $(srcdir)/nightingale.ini.in \
                        $(NULL)
NIGHTINGALE_DIST += $(CURDIR)/application.ini \
                 $(CURDIR)/nightingale.ini \
                 $(NULL)

PPDEFINES += $(SB_BRANDING_DEFINES)

ifeq (macosx,$(SB_PLATFORM))
   NIGHTINGALE_CONTENTS += $(CURDIR)/Info.plist
   NIGHTINGALE_PP_RESOURCES += $(srcdir)/Info.plist.in
   NIGHTINGALE_DIST += $(srcdir)/updater.plist
endif

SUBDIRS = branding \
          content \
          skin \
          preferences \
          profile \
          $(NULL)

include $(topsrcdir)/$(NIGHTINGALE_BRANDING_DIR)/branding.mk

include $(topsrcdir)/build/rules.mk

libs::
	$(TOUCH) $(NIGHTINGALE_DISTDIR)/.autoreg
