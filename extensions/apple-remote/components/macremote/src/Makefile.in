topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

IS_EXTENSION = 1
IS_COMPONENT = 1
DISABLE_DEADLY_WARNINGS = 1

# the name of our component
DYNAMIC_LIB = sbMacRemoteController

CMM_SRCS = HIDRemote.mm                     \
           sbAppleRemoteService.mm          \
           sbAppleRemoteModule.mm           \
           $(NULL)

CMM_INCLUDES = $(DEPTH)/extensions/apple-remote/components/macremote/public \
               $(DEPTH)/components/library/base/public \
               $(DEPTH)/components/mediacore/base/public \
               $(DEPTH)/components/controller/public \
               $(MOZSDK_INCLUDE_DIR) \
               $(MOZSDK_INCLUDE_DIR)/nspr \
               $(MOZSDK_INCLUDE_DIR)/necko \
               $(MOZSDK_INCLUDE_DIR)/xpcom \
               $(MOZSDK_INCLUDE_DIR)/string \
               $(MOZSDK_IDL_DIR) \
               $(NULL)


DYNAMIC_LIB = sbMacRemoteController

#DYNAMIC_LIB_OBJS = $(patsubst %.mm,%$(OBJ_SUFFIX),$(notdir $(CMM_SRCS)))

DYNAMIC_LIB_EXTRA_IMPORTS = nspr4 \
                            xpcom \
                            xpcomglue_s \
                            $(NULL)

DYNAMIC_LIB_IMPORT_PATHS = $(MOZSDK_LIB_DIR) \
                           $(NULL)

DYNAMIC_LIB_EXTRA_FLAGS= -framework Foundation \
                         -framework System \
                         -framework Carbon \
                         -framework IOKit \
                         -framework Cocoa \
                         $(NULL)

DYNAMIC_LIB_EXTRA_IMPORTS += mozjs

include $(topsrcdir)/build/rules.mk

