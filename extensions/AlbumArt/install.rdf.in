#filter substitution
<RDF xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:em="http://www.mozilla.org/2004/em-rdf#"
     xmlns:nightingale="http://www.getnightingale.com/2007/addon-metadata-rdf#">

  <Description about="urn:mozilla:install-manifest">

    <!-- Nightingale target application. -->
    <em:targetApplication>
      <Description>
        <em:id>nightingale@getnightingale.com</em:id>
        <em:minVersion>@EXTENSION_MIN_VER@</em:minVersion>
        <em:maxVersion>@EXTENSION_MAX_VER@</em:maxVersion>
      </Description>
    </em:targetApplication>

    <em:id>@EXTENSION_UUID@</em:id>
    <em:name>Artwork Extras</em:name>
    <em:iconURL>chrome://albumart/skin/icon-albumart.png</em:iconURL>
    <em:description>Artwork Extras for Nightingale.</em:description>
    <em:creator>@SB_VENDOR@</em:creator>
    <em:version>@EXTENSION_VER@</em:version>
    <em:homepageURL>http://www.getnightingale.com/</em:homepageURL>

    <nightingale:displayPane>
        <Description>
            <nightingale:contentUrl>chrome://albumart/content/albumArtPane.xul</nightingale:contentUrl>
            <nightingale:contentTitle>chrome://nightingale/locale/nightingale.properties#albumart.displaypane.title</nightingale:contentTitle>
            <nightingale:contentIcon>chrome://albumart/skin/icon-albumart.png</nightingale:contentIcon>
            <nightingale:defaultWidth>178</nightingale:defaultWidth>
            <nightingale:defaultHeight>178</nightingale:defaultHeight>
            <nightingale:suggestedContentGroups>servicepane</nightingale:suggestedContentGroups>
            <nightingale:showOnInstall>true</nightingale:showOnInstall>
        </Description>
    </nightingale:displayPane>

    <em:hidden>true</em:hidden>
    <em:appManaged>true</em:appManaged>
  </Description>
</RDF>
