<dialog title="&albumart.coverpreview.title;"
        xmlns:html="http://www.w3.org/1999/xhtml"
        xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
        xmlns:svg="http://www.w3.org/2000/svg"
        xmlns:xlink="http://www.w3.org/1999/xlink"
        onload="onLoad();"
        buttons="accept"
        width="500"
        height="500"
        persist="width height">

  <svg:svg flex="1">
    <svg:image id="coverPreviewImage"
               xlink:href="chrome://nightingale/skin/album-art/drop-target.png"
               width="100%"
               height="100%"/>
  </svg:svg>

  <script type="application/x-javascript"
          src="chrome://albumart/content/coverPreview.js" />

</dialog>
