DEPTH = ../../../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

CPP_SRCS = sbCOMArray.cpp \
           sbArray.cpp \
           sbPropertyBag.cpp \
           sbServiceManager.cpp \
           sbXPCOMModule.cpp \
           $(NULL)

CPP_EXTRA_INCLUDES = \
               $(DEPTH)/components/moz/xpcom/public \
               $(topsrcdir)/components/moz/threads/src \
               $(MOZSDK_INCLUDE_DIR)/embedcomponents \
               $(MOZSDK_INCLUDE_DIR)/docshell \
               $(MOZSDK_INCLUDE_DIR)/necko \
               $(MOZSDK_INCLUDE_DIR)/pref \
               $(MOZSDK_INCLUDE_DIR)/unicharutil \
               $(MOZSDK_IDL_DIR) \
               $(DEPS_DIR)/wpdsdk/Include \
               $(NULL)

# build a component (ie: a dynamically loadable module)
IS_COMPONENT = 1

DYNAMIC_LIB = sbxpcom

DYNAMIC_LIB_EXTRA_IMPORTS = plds4 \
                            $(NULL)

DYNAMIC_LIB_STATIC_IMPORTS = components/moz/threads/src/sbMozThreads \
                             $(NULL)

include $(topsrcdir)/build/rules.mk
