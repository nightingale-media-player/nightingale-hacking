DEPTH = ../../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

ifdef DEBUG
target_name = sbDBEngine_d
else
target_name = sbDBEngine
endif

ifeq (windows,$(SB_PLATFORM))
C_FLAGS = -nologo \
          -W3 \
          -WL \
          -Zi \
          -GS \
          -c \
          -TC \
          -FI "mozilla-config.h" \
          -FI "xpcom/xpcom-config.h" \
          $(NULL)

C_EXTRA_DEFS += -DOS_WIN=1 \
                $(NULL)

ARFLAGS = -NOLOGO \
          -MACHINE:X86 \
          -SUBSYSTEM:WINDOWS \
          $(NULL)

ifdef DEBUG
  C_FLAGS += -MTd \
             -Od \
             $(NULL)
else
  C_FLAGS += -MT \
             -Ox \
             $(NULL)
endif

endif

ifdef DEBUG
  C_EXTRA_DEFS += -DSQLITE_DEBUG=1 \
                  $(NULL)
endif

C_EXTRA_DEFS += -DSQLITE_ALLOW_XTHREAD_CONNECT=1 \
                -DSQLITE_OMIT_LOAD_EXTENSION=1 \
                -DSQLITE_THREADSAFE=1 \
                -DTEMP_STORE=2 \
                -DNO_TCL \
                $(NULL)

C_SRCS = sqlite3.c \
         $(NULL)

C_INCLUDES = $(srcdir) \
             $(MOZSDK_INCLUDE_DIR) \
             $(NULL)

CPP_SRCS = DatabaseEngineComponent.cpp \
           DatabaseEngine.cpp \
           DatabaseQuery.cpp \
           DatabaseResult.cpp \
           $(NULL)

CPP_INCLUDES = $(srcdir) \
               $(DEPTH)/components/dbengine/public \
               $(topsrcdir)/components/include \
               $(MOZSDK_INCLUDE_DIR) \
               $(MOZSDK_INCLUDE_DIR)/nspr \
               $(MOZSDK_INCLUDE_DIR)/necko \
               $(MOZSDK_INCLUDE_DIR)/xpcom \
               $(MOZSDK_INCLUDE_DIR)/string \
               $(MOZSDK_INCLUDE_DIR)/unicharutil \
               $(MOZSDK_IDL_DIR) \
               $(NULL)

DYNAMIC_LIB = $(target_name)$(DLL_SUFFIX)

DYNAMIC_LIB_OBJS = $(CPP_SRCS:.cpp=$(OBJ_SUFFIX)) \
                   $(C_SRCS:.c=$(OBJ_SUFFIX)) \
                   $(NULL)

DYNAMIC_LIB_EXTRA_IMPORTS = plds4 \
                            nspr4 \
                            xpcom \
                            xpcomglue_s \
                            $(NULL)

ifeq (windows,$(SB_PLATFORM))
  DYNAMIC_LIB_STATIC_IMPORTS += unicharutil_external_s
endif

ifeq (macosx,$(SB_PLATFORM))
  DYNAMIC_LIB_EXTRA_IMPORTS +=  unicharutil_external_s
endif

ifeq (linux,$(SB_PLATFORM))
  DYNAMIC_LIB_EXTRA_IMPORTS += unicharutil_external_s
  LDFLAGS += -Wl,-version-script -Wl,$(srcdir)/hide-sqlite.ver
  ifneq (,$(SB_ENABLE_STATIC))

  SHELL_EXECUTE += \
	-c '$(PERL) -I$(MOZSDK_SCRIPTS_DIR) $(MOZSDK_SCRIPTS_DIR)/build-list.pl \
	  $(SONGBIRD_OBJDIR)/components/static/link-flags \
	  "-Wl,-version-script -Wl,$(srcdir)/hide-sqlite.ver"'

  endif # SB_ENABLE_STATIC
endif

DYNAMIC_LIB_IMPORT_PATHS = $(MOZSDK_LIB_DIR) \
                           $(NULL)

LIBSONGBIRD_COMPONENT = SongbirdDatabaseEngineComponent

SONGBIRD_COMPONENTS = $(DYNAMIC_LIB) \
                      $(NULL)

include $(topsrcdir)/build/rules.mk
