DEPTH = ../../../../../../
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

target_name := sbMetadataHandlerTaglib

ifdef DEBUG
target_name := $(addsuffix _d,$(target_name))
endif

CPP_SRCS = MetadataHandlerTaglib.cpp \
           MetadataHandlerTaglibComponent.cpp \
           SeekableChannel.cpp \
           TaglibChannelFileIO.cpp \
           TaglibChannelFileIOManager.cpp \
           $(NULL)

CPP_INCLUDES = $(DEPTH)/components/mediacore/metadata/manager/public \
               $(DEPTH)/components/mediacore/metadata/handler/taglib/public \
               $(topsrcdir)/components/mediacore/metadata/manager/src \
               $(srcdir) \
               $(MOZSDK_INCLUDE_DIR) \
               $(MOZSDK_INCLUDE_DIR)/nspr \
               $(MOZSDK_INCLUDE_DIR)/xpcom \
               $(MOZSDK_INCLUDE_DIR)/string \
               $(MOZSDK_INCLUDE_DIR)/necko \
               $(MOZSDK_INCLUDE_DIR)/unicharutil \
               $(MOZSDK_IDL_DIR) \
               $(NULL)

DYNAMIC_LIB = $(target_name)$(DLL_SUFFIX)

DYNAMIC_LIB_OBJS = $(patsubst %.cpp,%$(OBJ_SUFFIX),$(notdir $(CPP_SRCS)))

DYNAMIC_LIB_EXTRA_IMPORTS = nspr4 \
                            unicharutil_external_s \
                            xpcom \
                            xpcomglue_s \
                            $(NULL)

DYNAMIC_LIB_IMPORT_PATHS = $(MOZSDK_LIB_DIR) \
                           $(NULL)

ifeq (macosx,$(SB_PLATFORM))
  DYNAMIC_LIB_EXTRA_IMPORTS += tag \
                               z \
                               $(NULL)
endif

ifeq (linux,$(SB_PLATFORM))
  DYNAMIC_LIB_STATIC_IMPORTS += \
                          $(DEPS_DIR)/zlib/$(SB_CONFIGURATION)/lib/libz \
                          $(DEPS_DIR)/taglib/$(SB_CONFIGURATION)/lib/libtag
endif

ifeq (windows,$(SB_PLATFORM))
  DYNAMIC_LIB_EXTRA_IMPORTS += libtag \
                               zlib \
                               $(NULL)
endif

CPP_EXTRA_INCLUDES += -I$(DEPS_DIR)/taglib/$(SB_CONFIGURATION)/include/taglib \
                      $(NULL)

DYNAMIC_LIB_IMPORT_PATHS += $(DEPS_DIR)/taglib/$(SB_CONFIGURATION)/lib \
                            $(DEPS_DIR)/zlib/$(SB_CONFIGURATION)/lib
                             
SONGBIRD_COMPONENTS = $(DYNAMIC_LIB)

include $(topsrcdir)/build/rules.mk
